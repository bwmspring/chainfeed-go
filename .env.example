# Server
SERVER_PORT=8080
SERVER_MODE=debug

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=chainfeed
DB_PASSWORD=chainfeed
DB_NAME=chainfeed
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# Ethereum
ETH_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
ETH_CHAIN_ID=11155111
ETH_NETWORK=sepolia
ALCHEMY_API_KEY=

# Webhook
WEBHOOK_SECRET=your-webhook-secret-here

# Auth
JWT_SECRET=your-jwt-secret-here
TOKEN_EXPIRY=24h
NONCE_EXPIRY=5m
SIGN_MESSAGE="Welcome to ChainFeed! Sign this message to authenticate your wallet. Nonce: {nonce}"

# Log
LOG_LEVEL=info
LOG_ENCODING=json
LOG_OUTPUT_PATHS=stdout

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Frontend (set these in frontend hosting platform)
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8080
WS_URL=ws://localhost:8080/ws
